%tr
  %td= render 'topics/label', topic: topic
  %td= topic.start_date
  %td
    = render 'topics/state_label', topic: topic
    = link_to topic.title, topic
    - if topic.user == current_user
      = link_to edit_topic_path(topic), class: "text-warning" do
        %i.glyphicon.glyphicon-pencil
  %td= topic.deadline_date
  %td= "#{topic.num_answer(1)}/#{User.all.count} (#{topic.num_unknown})"
  %td= topic.comments.count
  %td
    - if topic.user == current_user
      = link_to topic, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "text-danger" do
        %i.glyphicon.glyphicon-remove-sign