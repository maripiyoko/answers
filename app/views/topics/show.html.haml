.panel.panel-default
  .panel-heading
    = render 'label', topic: @topic
    %h3.panel-title= @topic.title

  .panel-body
    %table.table
      %tr
        %th 開催日
        %td= @topic.start_date
      %tr
        %th 開催場所
        %td= @topic.place
      %tr
        %th 回答締め切り日
        %td= @topic.deadline_date
      %tr
        %th 概要
        %td= @topic.content
